<form action="/discos/editarDiscos/{{disco.discoId}}" method="POST" enctype="multipart/form-data" class="p-4 shadow-sm rounded bg-light">
    <input type="hidden" name="discoId" value="{{disco.discoId}}">

    <div class="mb-3">
        <label for="titulo" class="form-label">Título</label>
        <input type="text" id="titulo" name="titulo" class="form-control" value="{{disco.titulo}}" required>
    </div>

    <div class="mb-3">
        <label for="anoLancamento" class="form-label">Ano de Lançamento</label>
        <input type="date" id="anoLancamento" name="anoLancamento" class="form-control" value="{{disco.anoLancamento}}" required>
    </div>

    <div class="mb-3">
        <label for="capa" class="form-label">Capa (imagem)</label>
        <input type="file" id="capa" name="capa" class="form-control" accept="image/*">
        <small class="form-text text-muted">Formatos suportados: JPG, PNG.</small>
        <img src="/uploads/{{disco.capa}}" alt="Capa atual" class="img-thumbnail mt-2" style="max-width: 200px;">
    </div>

<select id="genero" name="genero" class="form-control" data-selected="{{disco.generoMusical}}" required>
    <option value="" disabled>Selecione um gênero</option>
</select>

    <div class="mb-3">
        <label for="faixaNome" class="form-label">Nome da Faixa</label>
        <input type="text" id="faixaNome" name="faixaNome" class="form-control" value="{{disco.faixaNome}}">
    </div>

    <div class="mb-3">
        <label for="duracao" class="form-label">Duração</label>
        <input type="text" id="duracao" name="duracao" class="form-control" value="{{disco.faixaDuracao}}">
    </div>

    <div class="mb-3">
        <label for="audio" class="form-label">Áudio (faixa)</label>
        <input type="file" id="audio" name="audio" class="form-control" accept="audio/*">
        <small class="form-text text-muted">Formatos suportados: MP3, WAV, OGG.</small>
        <audio controls class="mt-2" style="width: 100%;">
            <source src="/uploads/{{disco.faixaAudio}}" type="audio/mpeg">
            Seu navegador não suporta o elemento de áudio.
        </audio>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar Disco</button>
</form>

<script>
    const generos = [
  'Pop',
  'Rock',
  'Hip-hop',
  'Jazz',
  'Classical',
  'Blues',
  'Reggae',
  'Electronic',
  'Country',
  'Soul',
  'R&B',
  'Funk',
  'Metal',
  'Ska',
  'Punk',
  'Gospel',
  'Disco',
  'Techno',
  'House',
  'Alternative',
  'Folk',
  'Latin',
  'K-pop',
  'Indie',
  'Opera',
];

const selectGenero = document.getElementById('genero');
const selectedGenero = selectGenero.getAttribute('data-selected');

generos.forEach(genero => {
    const option = document.createElement('option');
    option.value = genero;
    option.textContent = genero;

    if (genero === selectedGenero) {
        option.selected = true;
    }

    selectGenero.appendChild(option);
});

</script>